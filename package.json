{
  "name": "@muxiu1997/vue-use-emitter",
  "version": "0.1.0-rc.3",
  "description": "A Vue composable event emitter library based on mitt, featuring an `autoOff` method for automatic call `off` on component unmount and dependency injection for ease of use, simplifying inter-component communication with minimal code.",
  "type": "module",
  "source": "src/index.ts",
  "module": "dist/define-emitter-composable.mjs",
  "main": "dist/define-emitter-composable.js",
  "jsnext:main": "dist/define-emitter-composable.mjs",
  "umd:main": "dist/define-emitter-composable.umd.js",
  "typings": "index.d.ts",
  "exports": {
    "types": "./index.d.ts",
    "module": "./dist/define-emitter-composable.mjs",
    "import": "./dist/define-emitter-composable.mjs",
    "require": "./dist/define-emitter-composable.js",
    "default": "./dist/define-emitter-composable.mjs"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "test": "vitest --typecheck",
    "coverage": "vitest --typecheck --coverage",
    "bundle": "microbundle -f es,cjs,umd"
  },
  "keywords": [
    "vue",
    "vue-demi",
    "mitt",
    "events",
    "eventemitter",
    "emitter"
  ],
  "author": "MuXiu1997 <muxiu1997@gmail.com> (https://github.com/MuXiu1997/)",
  "repository": "MuXiu1997/define-emitter-composable",
  "homepage": "https://github.com/MuXiu1997/define-emitter-composable",
  "license": "MIT",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "dependencies": {
    "mitt": "^3.0.1",
    "vue-demi": "latest"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.0",
    "@vitest/coverage-v8": "^1.0.0-beta.5",
    "@vitest/ui": "^1.0.0-beta.5",
    "@vue/test-utils": "^2.4.2",
    "eslint": "^8.54.0",
    "jsdom": "^20.0.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.7.1",
    "typescript": ">=5.0.0 <5.3.0",
    "vitest": "^1.0.0-beta.5",
    "vue": "^3.0.0"
  }
}
