{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "ESNext",
		"lib": ["ESNext"],
		"target": "ES2016",
		"strict": true,
		"noEmit": true,
		"declaration": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"types": [
			"vitest/globals"
		]
	},
	"include": [
		"src/*.ts",
		"test/*.ts",
	]
}
