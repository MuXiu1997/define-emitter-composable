{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "vitest/globals"
    ],
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts",
    "test/*.ts"
  ]
}
